
<%#= stylesheet_link_tag "practice/dashboard.css" %>
<%# page_header 'Dashboard' %>
<div id="tab-general" class="dashboard">
  <div id="sum_box" class="row mbl">
    <div class="col-sm-6 col-md-3">
      <div class="panel profit db mbm">
         <a href="/practice/patients">
        <div class="panel-body">
         
            <p class="icon dashboard-icon"><i class="icon fa fa-user"></i></p>
            <h4 class="value"><span data-counter="" data-start="10" data-end="50" data-step="1" data-duration="0"><%= @patient_count%></span></h4>
            <p class="description">Patients</p>
         
        </div>
         </a>
      </div>
    </div>
    <div class="col-sm-6 col-md-3">
      <div class="panel income db mbm">
        <a href="/practice/intake_forms">
        <div class="panel-body">
          
            <p class="icon dashboard-icon"><i class="icon fa fa-clipboard"></i></p>
            <h4 class="value"><span><%#= @intakeform_count%></span></h4>
            <p class="description">Visitors</p>
        
        </div>
          </a>
      </div>
    </div>
    <div class="col-sm-6 col-md-3">
      <div class="panel task db mbm">
        <a href="/practice/users">
        <div class="panel-body">
          
            <p class="icon dashboard-icon"><i class="icon fa fa-group"></i></p>
            <h4 class="value"><span><%#= @user_count%></span></h4>
            <p class="description">Invitations</p>
         
        </div>
         </a>
      </div>
    </div>
    <div class="col-sm-6 col-md-3">
      <div class="panel visit db mbm">
        <a href="/practice/users">
        <div class="panel-body">
          <p class="icon dashboard-icon"><i class="icon fa fa-user-md"></i></p>
          <h4 class="value"><span><%#= @practitioner_count%></span></h4>
          <p class="description">Practitioners</p>
        </div>
      </a>
      </div>
    </div>
  </div>
  <div class="row mbl">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          <h3 class="">Patients</h3>
        </div>
        <div class="col-lg-6 col-md-6  col-sm-6  col-xs-6">
          <h3>
          <%#= link_to(" Upload CSV", new_practice_patient_path, class: "btn btn-green pull-right fa fa-cloud-upload") %>
          <%#= link_to(" Add Patient", new_practice_patient_path, class: "btn btn-green pull-right fa fa-plus") %>
          </h3>  
        </div>
      </div>
          <div class="row">
            <div class="col-md-12">
              <div class="panel panel-yellow">

                <div class="panel-body">
                  <table class="table table-hover patient_forms_table">
                    <thead>
                      <tr>
                        <th>Patient Name</th>
                        <th>Form name</th>
                        <th>Practitioner</th>
                      </tr>
                    </thead>
                    <tbody>
                  <% User.all.each do |user| %>
                    
                   
                        <tr>
                          <td><%= user.name %></td>
                          <td><%= user.email %></td>
                          
                        </tr>
                       
                     
                    <% end %>
                  
                </tbody>
              </table>
                   <%#= render partial: "practice/patients/list" %>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
  </div>




